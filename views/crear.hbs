{{> boton_volver_inicio}}

<main>
  <div class="container">
    <h1 class="my-5 text-decoration-underline">Agregar Deporte</h1>
    <form
      action="/agregar_deporte"
      class="border rounded p-4 border border-primary"
    >
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nombre</label>

        <div class="col-sm-10">
          <input
            id="nombre"
            type="text"
            class="form-control"
            name="nombre"
            required
          />
        </div>
      </div>
      <div class="form-group row mt-sm-3">
        <label class="col-sm-2 col-form-label">Precio</label>

        <div class="col-sm-10">
          <input
            id="precio"
            type="number"
            class="form-control"
            name="precio"
            required
            min="0"
            step="0.01"
          />
        </div>
      </div>

      <button class="btn btn-info d-block mx-auto my-3 fw-bold" type="submit">
        <i class="bi bi-plus-square-fill"></i> Agregar Deporte
      </button>
    </form>
  </div>

  <h5 class="text-center my-4 text-decoration-underline">
    Tabla de deportes registrados
  </h5>
  <table class="table w-50 m-auto border mb-5">
    <thead>
      <tr>
        <th scope="col">#Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Editar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody id="cuerpo_crear">
      <td colspan="5" class="text-center bg-light p-3">
        Ingresa deportes para que se muestren aqu√≠
      </td>
    </tbody>
  </table>

  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Editar Deporte</h5>
        </div>
        <div class="rounded p-4">
          <form id="formModalEditar">
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Id</label>

              <div class="col-sm-10">
                <input
                  id="idModal"
                  disabled
                  type="text"
                  class="form-control"
                  name="id"
                />
              </div>
            </div>
            <div class="form-group row mt-3">
              <label class="col-sm-2 col-form-label">Nombre</label>

              <div class="col-sm-10">
                <input
                  id="nombreModal"
                  disabled
                  type="text"
                  class="form-control"
                  name="nombre"
                />
              </div>
            </div>
            <div class="form-group row mt-3">
              <label class="col-sm-2 col-form-label">Precio</label>

              <div class="col-sm-10">
                <input
                  id="precioModal"
                  type="number"
                  class="form-control"
                  precio="precio"
                  required
                  min="0"
                  step="0.01"
                />
              </div>
            </div>

            <button class="btn btn-warning mt-3 d-block mx-auto">Editar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
